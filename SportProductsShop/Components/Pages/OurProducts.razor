@page "/ourproducts"

<h3>Our Products</h3>

<body>

    <div class="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/product1.jpg" alt="Product 1">
            </div>
            <div class="carousel-item">
                <img src="images/product2.jpg" alt="Product 2">
            </div>
        </div>
        <a class="carousel-control-prev" id="prevButton">&#10094;</a>
        <a class="carousel-control-next" id="nextButton">&#10095;</a>
    </div>
<script src="js/carousel.js" ></script>
</body>
<style>
    .carousel {
        position: relative;
        width: 100%;
        margin: auto;
        overflow: hidden;
    }

    .carousel-inner {
        display: flex;
        transition: transform 0.5s ease;
    }

    .carousel-item {
        min-width: 100%;
        box-sizing: border-box;
        
    }

        .carousel-item img {
            width: 100%;
        }

    .carousel-control-prev, .carousel-control-next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        padding: 10px;
        cursor: pointer;
        user-select: none;
    }

    .carousel-control-prev {
        left: 10px;
    }

    .carousel-control-next {
        right: 10px;
    }
</style>
